{
  "name": "@qiskit/web-components",
  "version": "0.1.2",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./components/*": "./components/*",
    "./banner": "./components/banner/index.js",
    "./navbar": "./components/navbar/index.js"
  },
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "analyze-lit": "lit-analyzer \"components/*/*.ts\" --strict",
    "build": "tsc && rollup --config rollup.config.js",
    "dev": "npm run storybook:start",
    "format": "npm-run-all format:*",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "prettier . --ignore-path .gitignore --write",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint . --ignore-path .gitignore",
    "prepack": "npm run build",
    "prepare": "husky install",
    "release": "changeset publish",
    "start": "npm run storybook:start",
    "storybook:build": "build-storybook",
    "storybook:build:start": "web-dev-server --root-dir storybook-static --open",
    "storybook:start": "web-dev-server --config wds-storybook.config.js",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch"
  },
  "files": [
    "components/**/*.{d.ts,js,js.map}",
    "!components/**/*.stories.{d.ts,js,js.map}",
    "!components/**/*.test.{d.ts,js,js.map}",
    "!components/scss.d.ts"
  ],
  "dependencies": {
    "@carbon/colors": "^10.34.0",
    "@carbon/layout": "^10.34.0",
    "@carbon/type": "^10.38.0",
    "carbon-web-components": "^1.19.0",
    "lit": "^2.0.2",
    "lit-element": "^3.0.2",
    "lit-html": "^2.0.2",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.18.1",
    "@open-wc/testing": "^3.0.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "@web/dev-server": "0.1.19",
    "@web/dev-server-esbuild": "~0.2.16",
    "@web/dev-server-storybook": "~0.3.8",
    "@web/test-runner": "~0.13.22",
    "@web/test-runner-playwright": "~0.8.8",
    "eslint": "^8.4.1",
    "eslint-config-ibmresearch": "~0.24.0",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-lit-a11y": "^2.2.0",
    "eslint-plugin-wc": "^1.3.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "lit-analyzer": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "~2.5.1",
    "prettier-plugin-package": "^1.3.0",
    "rollup": "^2.61.1",
    "rollup-plugin-lit-css": "^3.2.1",
    "sass": "^1.45.0",
    "typescript": "~4.5.4"
  },
  "eslintConfig": {
    "extends": "ibmresearch",
    "overrides": [
      {
        "files": "components/**/*",
        "extends": "ibmresearch/typescript-lit"
      }
    ]
  },
  "lint-staged": {
    "**/*.{html,js,json,md,ts,yml}": "prettier --ignore-path .gitignore --write",
    "**/*.{js,ts}": "eslint --ignore-path .gitignore --fix"
  },
  "prettier": {
    "singleQuote": true
  }
}
